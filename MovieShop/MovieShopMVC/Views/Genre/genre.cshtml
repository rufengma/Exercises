@model List<ApplicationCore.Models.MovieCardResponseModel>
@{
    ViewData["Title"] = "GenreMovies";
}


@*All pages include: homepage, purchased movies, favorite movies
    and movies by genre, all need movieCards*@
<div class="rounded">
    <div class="container-fluid bg-light">
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-3">
                    <partial name="_MovieCard" model="movie"/>
                </div>
            }
        </div>
    </div>
</div>